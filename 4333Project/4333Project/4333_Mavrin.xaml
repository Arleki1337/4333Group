<Window x:Class="_4333Project._4333_Mavrin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4333Project"
        mc:Ignorable="d"
        Title="_4333_Mavrin" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Радий, 8 лет UwU" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="Pink"/>


        <Button Content="Импорт данных" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="150" Height="40" 
                Margin="0,70,0,0"
                Click="ImportClientsData_Click"/>


        <Button Content="Экспорт в Excel" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Width="150" Height="40" 
                Margin="0,302,0,0"
                Click="ExportClientsToExcel_Click"/>
    </Grid>
</Window>
